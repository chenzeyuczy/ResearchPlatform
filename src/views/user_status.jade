// User_Status
.user-state-div
  if user_login
    p
      a(href='/#') #{username}
    <br>
    p#newsletter-header-manage
      a(href='/#', onclick='javascript:event.target.port=8080') 管理
    <br>
    p#newsletter-header-exit
      a(href='/logout') 退出
  else
    p#newsletter-header
      strong
        a(href='/register')
          u 注册
      |  以登陆研究平台
    form(action='/login', method='POST')
      input#newsletter-input-username(type='text', name='username', placeholder='请输入账号')
      input#newsletter-input-password(type='password', name='password', placeholder='请输入密码')
      input#newsletter-input-submit(type='submit', value='提交')

