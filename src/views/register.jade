extend layout

block content

  section#content
    include content_header.jade
    // Section
    section.section.full-width-bg.gray-bg
      .row
        .col-lg-9.col-md-9.col-sm-8
          form#signUp-form(action='/register', method='POST')
            .notification-input
              label 请输入用户名
              .info
                input(type='username', name='username')
              label 请输入密码
              .info
                input(type='password', name='password')
            input(type='submit', value='Register')
        // Sidebar
        .col-lg-3.col-md-3.col-sm-4.sidebar
          // Upcoming Events
          .sidebar-box.white.animate-onscroll
            h3 新闻动态
            ul.upcoming-events
